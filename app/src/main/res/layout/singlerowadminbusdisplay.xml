<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Bus Number" />

        <TextView
            android:id="@+id/Busnnotext"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="124dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Source" />

        <TextView
            android:id="@+id/routetext"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Busnnotext"
            android:layout_alignEnd="@+id/textView20"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-224dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Destination" />

        <TextView
            android:id="@+id/Timetxt"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/routetext"
            android:layout_marginStart="124dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView22" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Start Time" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Timetxt"
            android:layout_marginStart="124dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView25" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Stop Time" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView11"
            android:layout_marginStart="124dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView27" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView27"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Air Condition" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView12"
            android:layout_marginStart="124dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView29" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Ticket Fee" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:layout_marginStart="124dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textView31" />

        <Button
            android:id="@+id/button13"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/buttonshape"
            android:text="Check Seat Booking Data" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>